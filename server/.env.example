# ======================
# 服务器配置
# ======================
PORT=3005                         # 服务器端口 (默认: 3005)
NODE_ENV=development              # 环境模式 (development/production/test)
DEBUG=true                        # 是否启用调试模式
API_BASE_URL=http://localhost:3005 # API基础地址

# ======================
# 数据库配置 (MongoDB)
# ======================
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_URI=mongodb://user:pwd@127.0.0.1:27017/silc_robot # MongoDB连接字符串

# ======================
# 数据库配置 (PostgreSQL)
# ======================
PG_USER=
PG_PASSWORD=
PG_HOST=
PG_PORT=
PG_DATABASE=

# ======================
# JWT 认证配置
# ======================
JWT_SECRET=your-secret-key        # JWT加密密钥（生产环境务必修改！）
# JWT_EXPIRES_IN=7d               # 可覆盖代码中的默认过期时间

# ======================
# Redis 缓存配置
# ======================
REDIS_HOST=localhost              # Redis服务器地址
REDIS_PORT=6379                   # Redis端口
REDIS_PASSWORD=                   # Redis密码（没有密码留空）

# ======================
# OpenAI API 配置
# ======================
OPENAI_API_KEY=your-api-key-here  # OpenAI API密钥
# OPENAI_MODEL=gpt-3.5-turbo      # 可覆盖默认模型
# OPENAI_MAX_TOKENS=1000          # 可覆盖默认token数量
# OPENAI_TEMPERATURE=0.7          # 可覆盖默认温度参数

# ======================
# 高级配置（根据需要取消注释）
# ======================
# DB_SERVER_SELECTION_TIMEOUT=5000      # MongoDB服务器选择超时(ms)
# DB_SOCKET_TIMEOUT=45000               # MongoDB socket超时(ms)
# UPLOAD_MAX_SIZE=5242880               # 文件上传大小限制(字节)
