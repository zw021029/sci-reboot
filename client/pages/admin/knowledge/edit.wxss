.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.form {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

textarea.input {
  min-height: 200rpx;
}

.picker {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #333;
}

.footer {
  padding: 20rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 6rpx;
} 