/* pages/feedback/feedback.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx 30rpx;
}

.feedback-form {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.input-group {
  position: relative;
}

.feedback-input {
  width: 100%;
  height: 300rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #bdc3c7;
}

.contact-title {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.contact-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(37, 117, 252, 0.3);
}

.submit-btn:active {
  opacity: 0.9;
}
