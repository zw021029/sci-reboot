.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #e6f2ff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 40rpx;
  display: block;
  text-align: center;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
}

.form-box {
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.verify-code {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.verify-code .input {
  flex: 1;
  margin-bottom: 0;
}

.code-btn {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  border-radius: 45rpx;
  background: #f0f0f0;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-top: 0rpx;
}

.action-links {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #007AFF;
  text-align: center;
}

.wechat-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07C160;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
} 