<view class="container" style="width: 747rpx; display: flex; box-sizing: border-box; left: 25rpx; top: 0rpx; height: 1021rpx; position: relative">
  <view class="login-box" style="height: 1030rpx; display: block; box-sizing: border-box; width: 653rpx; left: 0rpx; top: -34rpx">
    <image class="logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    <view class="title">SILC-AI成长伙伴</view>
    <view class="subtitle">悉问·悉知·悉守，我们一起成长</view>
    
    <!-- 登录表单 -->
    <view class="form-box" wx:if="{{currentView === 'login'}}" style="height: 475rpx; display: block; box-sizing: border-box">
      <input style="width: 545rpx; display: block; box-sizing: border-box; height: 89rpx; left: 0rpx; top: 0rpx" 
        class="input" 
        type="text" 
        placeholder="请输入用户名/手机号" 
        model:value="{{username}}"
      />
      <input style="width: 541rpx; display: block; box-sizing: border-box; height: 89rpx" 
        class="input" 
        type="password" 
        placeholder="请输入密码" 
        model:value="{{password}}"
      />
      <button 
        class="submit-btn" 
        loading="{{loading}}"
        bindtap="handleLogin"
        style="position: relative; left: 0rpx; top: 77rpx">
        登录
      </button>
      <view class="action-links" style="position: relative; left: 0rpx; top: -121rpx">
        <text bindtap="switchToRegister">注册账号</text>
        <text bindtap="switchToReset">忘记密码</text>
      </view>
    </view>

    <!-- 注册表单 -->
    <view class="form-box" wx:if="{{currentView === 'register'}}">
      <input 
        class="input" 
        type="text" 
        placeholder="请输入手机号" 
        model:value="{{phone}}"
      />
      <view class="verify-code">
        <input 
          class="input" 
          type="number" 
          placeholder="验证码" 
          model:value="{{verifyCode}}"
        />
        <button 
          class="code-btn" 
          disabled="{{counting}}" 
          bindtap="sendVerifyCode"
        >
          {{counting ? countDown + 's' : '获取验证码'}}
        </button>
      </view>
      <input 
        class="input" 
        type="password" 
        placeholder="请设置密码" 
        model:value="{{password}}"
      />
      <input 
        class="input" 
        type="password" 
        placeholder="请确认密码" 
        model:value="{{confirmPassword}}"
      />
      <button 
        class="submit-btn" 
        loading="{{loading}}"
        bindtap="handleRegister"
      >
        注册
      </button>
      <view class="action-links">
        <text bindtap="switchToLogin">返回登录</text>
      </view>
    </view>

    <!-- 重置密码表单 -->
    <view class="form-box" wx:if="{{currentView === 'reset'}}">
      <input 
        class="input" 
        type="text" 
        placeholder="请输入手机号" 
        model:value="{{phone}}"
      />
      <view class="verify-code">
        <input 
          class="input" 
          type="number" 
          placeholder="验证码" 
          model:value="{{verifyCode}}"
        />
        <button 
          class="code-btn" 
          disabled="{{counting}}" 
          bindtap="sendVerifyCode"
        >
          {{counting ? countDown + 's' : '获取验证码'}}
        </button>
      </view>
      <input 
        class="input" 
        type="password" 
        placeholder="请设置新密码" 
        model:value="{{newPassword}}"
      />
      <input 
        class="input" 
        type="password" 
        placeholder="请确认新密码" 
        model:value="{{confirmPassword}}"
      />
      <button 
        class="submit-btn" 
        loading="{{loading}}"
        bindtap="handleResetPassword"
      >
        重置密码
      </button>
      <view class="action-links">
        <text bindtap="switchToLogin">返回登录</text>
      </view>
    </view>

    <!-- 微信登录按钮 -->
    <button 
      class="wechat-btn" 
      open-type="getUserInfo" 
      bindgetuserinfo="handleWechatLogin"
     style="position: relative; left: 0rpx; top: -88rpx">
      微信一键登录
    </button>
  </view>
</view> 