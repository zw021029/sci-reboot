<view class="container">
  <view class="header">
    <image class="logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    <view class="title">SILC-AI成长伙伴</view>
    <view class="subtitle">悉问·悉知·悉守，我们一起成长</view>
  </view>

  <view class="form-box">
    <view class="input-group">
      <input 
        class="input" 
        type="text" 
        placeholder="请输入用户名/手机号" 
        model:value="{{username}}"
      />
    </view>

    <view class="input-group">
      <input 
        class="input" 
        type="password" 
        
        placeholder="请输入密码" 
        model:value="{{password}}"
      />
    </view>

    <button 
      class="submit-btn" 
      loading="{{loading}}"
      bindtap="handleLogin"
    >
      登录
    </button>

    <view class="action-links">
      <text bindtap="navigateToRegister">注册账号</text>
      <text bindtap="navigateToReset">忘记密码</text>
    </view>

    <view class="divider">
      <view class="line"></view>
      <text>或</text>
      <view class="line"></view>
    </view>

    <button 
      class="wechat-btn" 
      open-type="getUserInfo" 
      bindgetuserinfo="handleWechatLogin"
    >
      <image class="wechat-icon" src="/assets/images/wechat.png" mode="aspectFit"></image>
      微信一键登录
    </button>
  </view>
</view> 