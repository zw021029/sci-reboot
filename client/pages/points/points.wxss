.container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 30rpx;
}

/* 积分卡片 */
.header {
  background: #1989fa;  /* 改为蓝色 */
  padding: 40rpx 30rpx 80rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 0 0 24rpx 24rpx;
  z-index: 1;
}

.header::before {
  content: '';
  position: absolute;
  top: -60rpx;
  left: -60rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
  z-index: -1;
}

.points-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.total-points {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.total-points .label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.total-points .value {
  font-size: 64rpx;
  font-weight: bold;
  color: #fff;
}

.points-detail {
  display: flex;
  justify-content: space-around;
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 20rpx 0;
}

.points-detail .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.points-detail .item:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background: rgba(255, 255, 255, 0.2);
}

.points-detail .num {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.points-detail .text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 功能区域 */
.function-area {
  margin: -50rpx 24rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  z-index: 10;
}

.function-grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  position: relative;
}

.grid-item::before {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background: #f2f2f2;
}

.grid-item:nth-child(3n)::before {
  display: none;
}

.grid-item::after {
  content: '';
  position: absolute;
  left: 15%;
  right: 15%;
  bottom: 0;
  height: 1rpx;
  background: #f2f2f2;
}

.grid-item:nth-last-child(-n+3)::after {
  display: none;
}

.grid-item:active {
  background-color: #f8f8f8;
}

.grid-item image {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}

.grid-item text {
  font-size: 26rpx;
  color: #333;
}

/* 积分明细 */
.points-list {
  margin: 0 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.list-header .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.list-header .title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 26rpx;
  background: #1989fa;  /* 改为蓝色 */
  border-radius: 3rpx;
}

.filter {
  display: flex;
  align-items: center;
  background: #f7f7f7;
  padding: 10rpx 16rpx;
  border-radius: 24rpx;
}

.filter text {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.filter image {
  width: 22rpx;
  height: 22rpx;
}

.list-content {
  padding: 0 24rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f7f7f7;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f9f9f9;
}

.item-info {
  flex: 1;
}

.item-info .type {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-info .desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 480rpx;
}

.item-info .time {
  font-size: 22rpx;
  color: #999;
}

.points {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.points.plus {
  color: #07c160;
}

.points.minus {
  color: #fa5151;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-state image {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}

.empty-state text {
  color: #999;
  font-size: 26rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 24rpx 0;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.loading text {
  color: #999;
  font-size: 26rpx;
} 