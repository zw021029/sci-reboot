/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header {
  padding: 40rpx 30rpx 50rpx;
  position: relative;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  right: -80rpx;
  top: -80rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.header::after {
  content: '';
  position: absolute;
  left: 40rpx;
  bottom: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.05);
}

.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 5;
  backdrop-filter: blur(10px);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-right: 30rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 26rpx;
  color: #7f8c8d;
}

.points-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-left: 30rpx;
}

.points-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #e74c3c;
}

.points-label {
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 功能区域 */
.function-area {
  padding: 0 30rpx;
  margin-top: -20rpx;
}

.section {
  margin-top: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* 功能列表 */
.function-list {
  padding: 0 20rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.list-item:active {
  background-color: #f8f9fa;
}

.list-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.item-icon image {
  width: 100%;
  height: 100%;
}

.item-name {
  font-size: 30rpx;
  color: #2c3e50;
}

.item-right {
  display: flex;
  align-items: center;
}

.arrow {
  font-size: 26rpx;
  color: #bdc3c7;
  margin-left: 10rpx;
}

.notification-badge {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #e74c3c;
  margin-right: 10rpx;
}